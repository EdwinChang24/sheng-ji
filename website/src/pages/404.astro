---
import Layout from "../layouts/Layout.astro";
import DisplayNavBar from "../sheng-ji-display/components/DisplayNavBar.svelte";
---

<Layout title="404 Not Found" description="Finding things is hard. As is finding friends.">
    <DisplayNavBar slot="navbar" client:only="svelte" />
    <div
        slot="content"
        class="bg-slate-900 min-h-dvh flex flex-col justify-center items-center space-y-8 pt-24 pb-8 px-8"
    >
        <h1 class="text-8xl font-bold text-center">404</h1>
        <p class="text-center">Finding things is hard. As is finding friends.</p>
        <a
            href="/"
            class="bg-slate-600 hover:bg-slate-500 px-6 py-3 rounded-full shadow-sm hover:shadow-2xl transition font-semibold text-center text-nowrap"
        >
            Go home
        </a>
    </div>
</Layout>

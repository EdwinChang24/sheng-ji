<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.MyApplication" parent="NightAdjusted.Theme.MyApplication" />

    <style name="Theme.MyApplication" parent="PlatformAdjusted.Theme.MyApplication">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.MyApplication">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.MyApplication.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

</resources>

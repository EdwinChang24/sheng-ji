<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.升级Display" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.升级Display" parent="NightAdjusted.Theme.升级Display" />

    <style name="Theme.升级Display" parent="PlatformAdjusted.Theme.升级Display">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.升级Display">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.升级Display.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="postSplashScreenTheme">@style/Theme.升级Display</item>
    </style>

</resources>

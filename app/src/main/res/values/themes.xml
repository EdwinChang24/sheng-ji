<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.ShengJiDisplay" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.ShengJiDisplay" parent="NightAdjusted.Theme.ShengJiDisplay" />

    <style name="Theme.ShengJiDisplay" parent="PlatformAdjusted.Theme.ShengJiDisplay">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.ShengJiDisplay">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.ShengJiDisplay.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="postSplashScreenTheme">@style/Theme.ShengJiDisplay</item>
    </style>

</resources>
